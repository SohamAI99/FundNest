# Environment
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://username:password@hostname:port/database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=fundnest_db

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Encryption Keys
ENCRYPTION_SECRET=your-encryption-secret-key

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@fundnest.com
FROM_NAME=FundNest

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,ppt,pptx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
OPENAI_API_KEY=your-openai-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Currency Exchange (optional)
USD_TO_INR_RATE=83

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT=1800000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:4028,https://fundnest.com

# Webhook Secrets
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_MATCHING_ALGORITHM=true
ENABLE_REAL_TIME_CHAT=true

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# CDN Configuration
CDN_BASE_URL=https://cdn.fundnest.com
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=fundnest-uploads

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:support@fundnest.com