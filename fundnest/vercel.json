{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "server/package.json", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...path].js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "fundnest-production-jwt-secret-key-change-this-in-production",
    "CORS_ORIGINS": "https://fundnest.vercel.app,https://fund-nest.vercel.app"
  }
}
