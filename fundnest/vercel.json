{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/api/$1.js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/client/dist/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "fundnest-production-jwt-secret-key-change-this-in-production",
    "CORS_ORIGINS": "https://fundnest.vercel.app,https://fund-nest.vercel.app"
  }
}
