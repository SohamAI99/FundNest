{
  "name": "FundNest - Startup Funding Platform",
  "short_name": "FundNest",
  "description": "Connect startups with investors and discover funding opportunities",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#6366f1",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "categories": ["business", "finance", "productivity"],
  "icons": [
    {
      "src": "/assets/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/assets/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "FundNest Dashboard - Desktop View"
    },
    {
      "src": "/assets/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "FundNest Dashboard - Mobile View"
    }
  ],
  "shortcuts": [
    {
      "name": "Startup Dashboard",
      "short_name": "Startup",
      "description": "Access your startup dashboard",
      "url": "/startup-dashboard",
      "icons": [
        {
          "src": "/assets/shortcut-startup.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Investor Dashboard",
      "short_name": "Investor",
      "description": "Access your investor dashboard",
      "url": "/investor-dashboard",
      "icons": [
        {
          "src": "/assets/shortcut-investor.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Check your messages",
      "url": "/messaging-system",
      "icons": [
        {
          "src": "/assets/shortcut-messages.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-pitch",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "pitch_deck",
          "accept": ["application/pdf", "application/vnd.ms-powerpoint", "application/vnd.openxmlformats-officedocument.presentationml.presentation"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+fundnest",
      "url": "/handle?type=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred"
}
